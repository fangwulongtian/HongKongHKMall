    <meta name="description" content="@CultureHelper.GetLangString("SHARE_MY_LUCKYCODE_MSG")" />
    <meta itemprop="image" content="@ViewBag.ImgUrl" />
    <title>@CultureHelper.GetLangString("SHARE_MY_LUCKYCODE")</title>
