                success: function () {
                    //alert(ok);
                },
                cancel: function () {
                    //alert("cancel");
                }
            });
        });
        wx.error(function (res) {
            //alert(res);
        });
    }
    catch (e)
    { }
</script>
</head>
<body>
    <div>
        <img alt="" src="@ViewBag.Pic" style="display:block;max-width:100%;margin:0 auto" />
    </div>
</body>
</html>
