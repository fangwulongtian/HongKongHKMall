@using HKTHMall.Core.Extensions
@using HKTHMall.Domain.WebModel.Models.Product
@using HKTHMall.Services.Common.MultiLangKeys
@{
    Layout = null;
    IEnumerable<ProductInfo> productList = ViewBag.ProductData;
}
<div class="Hot_Sale"><a href="#" style="color: #3e414f;">@CultureHelper.GetLangString("HOME_INDEXFIRST_GUESSYOULIKE")</a> </div>
<div class="Hot_Sale_main clearfix">

    @foreach (var product in productList)
    {
        <div class="main_cp1 fl">
            <a target="_blank" href="@Url.Action("shopping", "home", new { area = "", id = product.ProductId })"><img src="@Html.GetImagesUrl(product.PicUrl,218,234)" style="width:218px;height: 234px;" title="@product.ProductName"></a>
            <p><a target="_blank" href="@Url.Action("shopping", "home", new { area = "", id = product.ProductId })" class="cp_t1" style="color: #3e414f;margin:5px 0;">@product.ProductName</a></p>
            <span class="f14 fb8 tdd">@product.MarketPrice.ToString("F2") บาท</span>
            <span class="f22 ed">@product.HKPrice.ToString("F2") บาท</span>
        </div>
    }
</div>